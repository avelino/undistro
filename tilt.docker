FROM golang:alpine
WORKDIR /
RUN apk --update add ca-certificates curl
RUN curl -o aws-iam-authenticator https://amazon-eks.s3.us-west-2.amazonaws.com/1.18.9/2020-11-02/bin/linux/amd64/aws-iam-authenticator /bin
RUN mkdir -p /home/.aws
COPY ./bin/manager /app/manager
COPY ./clustertemplates ./clustertemplates
CMD ["/app/manager"]